<CalculatorLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    BoxLayout:
        sixe_hint_y: None
        height: "50dp"
        TextInput:
            id: input_text
            multiline: False
            readonly: True
            halign: "right"
            font_size: 32

    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: None
        height: "250dp"

        Button:
            text: "7"
            on_press: root.append_input(self.text)
        Button:
            text: "8"
            on_press: root.append_input(self.text)
        Button:
            text: "9"
            on_press: root.append_input(self.text)
        Button:
            text: "/"
            on_press: root.append_input(self.text)

        Button:
            text: "4"
            on_press: root.append_input(self.text)
        Button:
            text: "5"
            on_press: root.append_input(self.text)
        Button:
            text: "6"
            on_press: root.append_input(self.text)
        Button:
            text: "*"
            on_press: root.append_input(self.text)

        Button:
            text: "1"
            on_press: root.append_input(self.text)
        Button:
            text: "2"
            on_press: root.append_input(self.text)
        Button:
            text: "3"
            on_press: root.append_input(self.text)
        Button:
            text: "-"
            on_press: root.append_input(self.text)

        Button:
            text: "C"
            on_press: root.clear_input()
        Button:
            text: "0"
            on_press: root.append_input(self.text)
        Button:
            text: "="
            on_press: root.calculate_result()
        Button:
            text: "+"
            on_press: root.append_input(self.text)